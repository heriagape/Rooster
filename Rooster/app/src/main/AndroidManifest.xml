<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blikoon.rooster">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".RoosterApplicattion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChatListActivity" />
        <activity android:name=".ChatActivity" />

        <service android:name=".RoosterConnectionService" />

        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactDetailsActivity"
            android:label="@string/title_activity_contact_details" />
        <activity
            android:name=".MeActivity"
            android:label="@string/title_activity_me"
            android:parentActivityName=".ChatListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blikoon.rooster.ChatListActivity" />
        </activity>
    </application>

</manifest>